<h1>User Subscribtion Connections</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Subscription</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_subscribtion_connections.each do |user_subscribtion_connection| %>
      <tr>
        <td><%= user_subscribtion_connection.user_id %></td>
        <td><%= user_subscribtion_connection.subscription_id %></td>
        <td><%= user_subscribtion_connection.role %></td>
        <td><%= link_to 'Show', user_subscribtion_connection %></td>
        <td><%= link_to 'Edit', edit_user_subscribtion_connection_path(user_subscribtion_connection) %></td>
        <td><%= link_to 'Destroy', user_subscribtion_connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

