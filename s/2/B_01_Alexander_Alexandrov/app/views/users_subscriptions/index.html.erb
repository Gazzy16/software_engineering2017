<p id="notice"><%= notice %></p>

<h1>Users Subscriptions</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Subscription</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users_subscriptions.each do |users_subscription| %>
      <tr>
        <td><%= users_subscription.user_id %></td>
        <td><%= users_subscription.subscription_id %></td>
        <td><%= users_subscription.role %></td>
        <td><%= link_to 'Show', users_subscription %></td>
        <td><%= link_to 'Edit', edit_users_subscription_path(users_subscription) %></td>
        <td><%= link_to 'Destroy', users_subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

