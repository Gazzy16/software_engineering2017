<p id="notice"><%= notice %></p>

<h1>User Subscriptions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Subscription Price</th>
      <th>User type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_subscriptions.each do |user_subscription| %>
      <tr>
        <td><%= user_subscription.user.name %></td>
        <td><%= user_subscription.subscription.price %></td>
        <td><%= user_subscription.user_type %></td>
        <td><%= link_to 'Show', user_subscription %></td>
        <td><%= link_to 'Edit', edit_user_subscription_path(user_subscription) %></td>
        <td><%= link_to 'Destroy', user_subscription, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

