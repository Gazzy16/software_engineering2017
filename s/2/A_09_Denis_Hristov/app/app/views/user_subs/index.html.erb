<p id="notice"><%= notice %></p>

<h1>User Subs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Sub</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody> 
    <% @user_subs.each do |user_sub| %>
      <tr>
        <td><%= select_tag "users[]", options_for_select(@users.collect{|x| [x.name, x.id]}) %></td>
        <td><%= select_tag "subs[]", options_for_select(@subs.collect{|x| [x.price, x.id]}) %></td>
        <td><%= user_sub.role %></td>
        <td><%= link_to 'Show', user_sub %></td>
        <td><%= link_to 'Edit', edit_user_sub_path(user_sub) %></td>
        <td><%= link_to 'Destroy', user_sub, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

