<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>User Name</th>
			<th>Subscription Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>

				<% user.subscriptions_users.each do |s_u| %>
			    <td><%= @subscriptions.find(s_u.subscription_id).price %></td>
				<% end %>

        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
<br>
<%= link_to 'New Subscription', new_subscription_path %>
<br>
<%= link_to 'New Connection between user and subscription', new_subscriptions_user_path %>
