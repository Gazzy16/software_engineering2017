<p id="notice"><%= notice %></p>

<h1>Sub Users</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Sub</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sub_users.each do |sub_user| %>
      <tr>
        <td><%= sub_user.user_id %></td>
        <td>
			<%= select_tag(:sub_id, options_for_select([['1', 1], ['2', 2]])) %>
		</td>
        <td><%= sub_user.role %></td>
        <td><%= link_to 'Show', sub_user %></td>
        <td><%= link_to 'Edit', edit_sub_user_path(sub_user) %></td>
        <td><%= link_to 'Destroy', sub_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sub User', new_sub_user_path %>
