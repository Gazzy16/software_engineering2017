<h1> Pokazvane na articles </h1>

	<div class="row">
		<% @articles.each do|article| %>
			<div class="col-lg-3 col-md-4 col-sm-6">
				<h4><%= article.title %><h4>
				<%= image_tag article.picture, class: "img-fluid" %>
				
				<p> <%= article.body.first(40) %>...</p>
				
				<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#exampleModal">Open modal </button>
				
				<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLable" area-hidden="true">
					<div class="modal-dialog" role="document">
						<div class="modal-content">
							Dosta smesno
						</div>
					</div>
				</div>
			</div>
		<%end%>
	</div>
