<h1>Schools</h1>

<table>
  <thead>
    <tr>
      <th>Specialty Name</th>
      <th>Specialty Number of stud</th>
      <th>School Name</th>
      <th>School Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spec.each do |specialty| %>
      <tr>
	<td><%= specialty.name %></td>
        <td><%= specialty.studnum %></td>
        <td><%= specialty.school.name %></td>
        <td><%= specialty.school.number %></td>
        <td><%= link_to 'Show', specialty %></td>
        <td><%= link_to 'Edit', edit_school_path(specialty) %></td>
        <td><%= link_to 'Destroy', specialty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

