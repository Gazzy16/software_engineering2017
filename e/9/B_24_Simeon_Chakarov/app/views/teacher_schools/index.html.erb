<p id="notice"><%= notice %></p>

<h1>Teacher Schools</h1>

<table>
  <thead>
    <tr>
      <th>Teacher</th>
      <th>School</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teacher_schools.each do |teacher_school| %>
      <tr>
        <td><%= teacher_school.teacher.first_name %></td>
        <td><%= teacher_school.teacher.second_name%></td>
        <td><%= teacher_school.teacher.email%></td>
        <td><%= teacher_school.school.name%></td>
        <td><%= teacher_school.school.number%></td>
      </tr>
<% end %>

  </tbody>
</table>

<br>

<%= link_to 'New Teacher School', new_teacher_school_path %>
