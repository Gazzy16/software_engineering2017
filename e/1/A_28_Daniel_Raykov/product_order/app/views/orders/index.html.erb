<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<br>

<div class = "well">
   <%= form_for @order, html: { multipart: true } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :desc %>
      <%= f.text_field :desc %>
      <%= f.submit "Save", class: "btn btn-primary" %>
   <% end %>
</div>
