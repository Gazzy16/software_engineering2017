<p id="notice"><%= notice %></p>

<h1>Threadrs</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @threadrs.each do |threadr| %>
      <tr>
        <td><%= threadr.id %></td>
        <td><%= threadr.value %></td>
        <td><%= link_to 'Show', threadr %></td>
        <td><%= link_to 'Edit', edit_threadr_path(threadr) %></td>
        <td><%= link_to 'Destroy', threadr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Threadr', new_threadr_path %>
