<p id="notice"><%= notice %></p>

<h1>Student Kokis</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Second name</th>
      <th>Email</th>
      <th>School</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_kokis.each do |student_koki| %>
      <tr>
        <td><%= student_koki.first_name %></td>
        <td><%= student_koki.second_name %></td>
        <td><%= student_koki.email %></td>
        <td><%= student_koki.school %></td>
        <td><%= link_to 'Show', student_koki %></td>
        <td><%= link_to 'Edit', edit_student_koki_path(student_koki) %></td>
        <td><%= link_to 'Destroy', student_koki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

