  </thead>

  <tbody>
    <% @product_client_connections.each do |product_client_connection| %>
      <tr>
        <td><%= product_client_connection.product.name %></td>
        <td><%= product_client_connection.client.name %></td>
        <td><%= link_to 'Show', product_client_connection %></td>
        <td><%= link_to 'Edit', edit_product_client_connection_path(product_client_connection) %></td>
        <td><%= link_to 'Destroy', product_client_connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
