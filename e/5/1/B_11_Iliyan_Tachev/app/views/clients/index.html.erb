<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>Client Name</th>
      <th>Product Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
    <% client.products.each do |product|%>
      <tr>
        <td><%= client.name %></td>
        <td><%= product.name %></td>
      </tr>
    <% end %>
   <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path %>
