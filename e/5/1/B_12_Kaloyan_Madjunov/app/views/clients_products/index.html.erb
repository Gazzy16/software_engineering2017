<h1>Clients Products</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients_products.each do |clients_product| %>
      <tr>
        <td><%= clients_product.client_id %></td>
        <td><%= clients_product.product_id %></td>
        <td><%= link_to 'Show', clients_product %></td>
        <td><%= link_to 'Edit', edit_clients_product_path(clients_product) %></td>
        <td><%= link_to 'Destroy', clients_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

