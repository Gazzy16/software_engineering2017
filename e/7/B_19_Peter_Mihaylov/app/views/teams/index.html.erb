<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Name</th>
      <th>Num</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.color %></td>
        <td><%= team.name %></td>
        <td><%= team.num %></td>
	<% @team.each do |tm| %>
	<tr>
		<td><%= tm.member.name %></td>
	        <td><%= tm.member.email %></td>
	</tr>
	<% end %>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

