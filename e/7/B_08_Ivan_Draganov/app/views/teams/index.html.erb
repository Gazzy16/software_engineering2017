<p id="notice"><%= notice %></p>

<h1>Clients and products</h1>

<table>
  <thead>
    <tr>
      <th>Product Name</th>
			<th>Client Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>

				<% product.clients_products.each do |client| %>
			    <td><%= @clients.find(client.client_id).name %></td>
				<% end %>

        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
<br>
<%= link_to 'New Client', new_client_path %>
<br>
<%= link_to 'New Connection between clients and products', new_clients_product_path %>




