<p id="notice"><%= notice %></p>

<h1>Cinemas Films</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cinemas_films.each do |cinemas_film| %>
      <tr>
        <td><%= cinemas_film.cinemas %></td>
        <td><%= cinemas_film.films %></td>       
        <td><%= link_to 'Show', cinemas_film %></td>
        <td><%= link_to 'Edit', edit_cinemas_film_path(cinemas_film) %></td>
        <td><%= link_to 'Destroy', cinemas_film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

