<p id="notice"><%= notice %></p>

<h1>Films</h1>

<table>
  <thead>
    <tr>
      <th>Film Name</th>
      <th>Cinema Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
		  <tr>
		    <td><%= film.name %></td>
				<% film.cinema_films.each do |cinema| %>
			    <td><%= @cinemas.find(cinema.cinema_id).location %></td>
				<% end %>
		    <td><%= link_to 'Show', film %></td>
		    <td><%= link_to 'Edit', edit_film_path(film) %></td>
		    <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		  </tr>
		<% end %>
  </tbody>
</table>

<br>

