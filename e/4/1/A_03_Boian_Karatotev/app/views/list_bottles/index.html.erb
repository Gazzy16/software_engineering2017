<p id="notice"><%= notice %></p>

<h1>Bottles</h1>

<table>
  <thead>
    <tr>
      <th>Color</th>
      <th>Brand</th>
      <th>Table</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bottles.each do |bottle| %>
      <tr>
        <td><%= bottle.color %></td>
        <td><%= bottle.brand %></td>
        <td><%= bottle.table.id %></td>
        <td><%= bottle.table.width %></td>
        <td><%= bottle.table.height %></td>
      </tr>
    <% end %>
  </tbody>
</table>
