<p id="notice"><%= notice %></p>

<h1>Task Solutions</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Status</th>
      <th>Confirmed</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_solutions.each do |task_solution| %>
      <tr>
        <td><%= task_solution.picture %></td>
        <td><%= task_solution.status %></td>
        <td><%= task_solution.confirmed %></td>
        <td><%= task_solution.task_id %></td>
        <td><%= link_to 'Show', task_solution %></td>
        <td><%= link_to 'Edit', edit_task_solution_path(task_solution) %></td>
        <td><%= link_to 'Destroy', task_solution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

